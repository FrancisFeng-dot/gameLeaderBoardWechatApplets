.mask {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.75);
  display: flex;
  flex-direction: column;
  z-index: 999;
}

.bags {
  width:580rpx;height:400rpx;
  z-index: 1000;
  border-radius: 20rpx;
  background:#ffffff;
  position: fixed;
  top:0;
  bottom:0;
  left: 0;right:0;
  margin: auto;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  box-sizing:border-box;
  padding:18rpx 0 40rpx;
}

.bags>text {
  font-family: SourceHanSansCN-Regular;
  font-size: 32rpx;
  color:#1A1A1A;
}

.closepos{
  position:absolute;
  width:40rpx;height:40rpx;
  top:30rpx;right:30rpx;
}

.won{
  width:100%;height:410rpx;
  display:flex;
  flex-direction:column;
  justify-content:space-around;
  align-items:center;
  position:relative;
}

.receiveredem{
  width: 230rpx;
  height:68rpx;
  line-height:68rpx;
  border-radius:34rpx;
  font-size: 26rpx;
  font-family: MicrosoftYaHei;
  color: #ffffff;
  background-size:100% 100%;
  border:0;
}

.receiveredem::after{
  border:0;
}

.size22_color666{
  color:#666666;
  font-size:22rpx;
}

.size26_color666{
  font-size:26rpx;
  color:#666666;
}

.size22_color999{
  font-size:22rpx;
