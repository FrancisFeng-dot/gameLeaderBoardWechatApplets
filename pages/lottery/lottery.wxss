}

.size28_color333{
  font-size:28rpx;
  color:#333333;
}

.size26_color333{
  font-size:26rpx;
  color:#333333;
}

.converttitle{
  position:absolute;left:0;right:0;top:-58rpx;margin:auto;
  width:378rpx;height:92rpx;
}
.closeconvert{
  position:absolute;left:0;right:0;bottom:-92rpx;margin:auto;
  width:62rpx;height:62rpx;
}

.flex_input{
  display:flex;
  justify-content:flex-end;
  align-items:center;
  margin-top:20rpx;
}
.flex_input>text{
  font-size: 26rpx;
  color:#333333;
}
.flex_input>input{
  width:370rpx;
  height:60rpx;
  border-radius:8rpx;
  border:2rpx solid #E6E6E6;
}

.subscription{
  position:relative;
  width:300rpx;
  height:68rpx;
  padding: 0;
  line-height: 68rpx;
  border-radius:34rpx;
  background: #FE4141;
  color:#FFFFFF;
  font-size:26rpx;
  margin:0;
  margin-top:42rpx;
}

.share_button{
  width:100%;height:320rpx;
  position:fixed;bottom:0;left:0;
  background:#EFEFEF;
}
.share_button>button,.share_button>navigator{
  width:100%;height:100rpx;
  padding: 0;
  margin: 0;
  background:#ffffff;
  border-top:1px solid #EFEFEF;
  border-radius: 0;
  font-size:36rpx;
}
.share_button>button::after{
  border:0;
  border-radius: 0;
}