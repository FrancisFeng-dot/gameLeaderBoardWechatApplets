/* pages/lottery/lottery.wxss */
page {
  overflow-y: auto;
  background: #FF7D48;
}

.container {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  position:relative;

}

.extractbutton{
  width:100rpx;height:42rpx;
  line-height:42rpx;
  border-radius:22rpx;
  background:#ffffff;
  font-family:SourceHanSansCN-Regular;font-size:22rpx;color:#FF7936;
  text-align: center;
}

.lotterychance{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-image: url('https://qmzgcdn.boc7.net/welfare/free_game/background_lottery2.jpg');
  background-repeat: no-repeat;
  background-size:100% 500rpx;
  position: relative;
}

.redemptrecord{
  height:56rpx;
  background: transparent;
  margin-bottom:26rpx;
  display: flex;
  align-items: center;
  position: relative;
}

.redemptrecord>view:nth-child(1){
  position: absolute;
  opacity: 0.3;
  width:100%;
  height:100%;
  border-radius: 28rpx;
  background:#000000;
}

.redemptrecord>image{
  width:44rpx;
  height:44rpx;
  border-radius: 50%;
  margin-right: 12rpx;
  position:relative;
  margin-left:10rpx;
}

.redemptrecord>view:nth-child(3){
  display: flex;
  justify-content: flex-start;
  align-items: center;
  max-width:310rpx;
  white-space:nowrap;
  word-wrap:normal;
  text-overflow:ellipsis;
  overflow:hidden;
}

.redemptrecord>view:nth-child(3)>text{
  font-family: MicrosoftYaHei;
  font-size: 24rpx;
  color:#ffffff;
  position:relative;
}

.lottery_getmoney{
  display: flex;
  justify-content: flex-end;
  align-items: center;
  position: absolute;
  right:30rpx;
  top:32rpx;
}

.lottery_getmoney>image{
  width: 28rpx;height: 32rpx;border-radius: 4rpx;
}

.lottery_getmoney>text{
  font-family: SourceHanSansCN-Regular;
  font-size: 26rpx;
  color:#ffffff;
  margin-left:12rpx;
  margin-right: 24rpx;
}

.lottery_getmoney>button{
  width: 110rpx;
  height:44rpx;
  line-height: 44rpx;
  border:0;
  background: #ffffff;
  border-radius: 22rpx;
  font-family: SourceHanSansCN-Regular;
  font-size: 22rpx;
  color:#EE613A;
}

.lottery_getmoney>button::after{
  border:0;
}

.getmoneytask{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 70rpx;
  font-family: MicrosoftYaHei;
  font-size:26rpx;
  color:#FFF66C;
  margin: 24rpx 0 34rpx;
}

.invite_friends{
  width:610rpx;
  height: 86rpx;
  line-height: 86rpx;
  border-radius: 44rpx;
  background-image:url('https://qmzgcdn.boc7.net/welfare/free_game/invite_friendbutton.png');
  background-size: 100% 100%; 
  border:0;
  font-family: SourceHanSansCN-Regular;
  font-size: 32rpx;
  color:#E5401F;
}

.invite_friends::after{
  border:0;
}

.gamelist{
  display:flex;
  justify-content:center;
  align-items: center;
}

.gamelist>view{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin:50rpx 16rpx 26rpx;
}

.gamelist>view>view>view,.gamelist>view>navigator>view{
  width: 114rpx;
  height:114rpx;
  border-radius: 20rpx;
  margin-bottom: 18rpx;
  background-size:100% 100%;
  position: relative;
}

.gamelist>view>view>view>view:nth-child(1),.gamelist>view>navigator>view>view:nth-child(1){
  width:100%;
  height:100%;
  opacity: 0.65;
  border-radius: 20rpx;
  background: #000000;
}

.gamelist>view>view>view>view:nth-child(2),.gamelist>view>navigator>view>view:nth-child(2){
  font-size:24rpx;
  color:#ffffff;
  font-family: SourceHanSansCN-Regular;
  position: absolute;
  top: 0;
  bottom:0;
  left:0;
  right:0;
  margin: auto;
  display: flex;
  justify-content:center;
  align-items:center;
}

.gamelist>view>view>text,.gamelist>view>navigator>text{
  font-family:SourceHanSansCN-Regular;
  color:#FFFFFF;
  font-size:22rpx;
  text-align: center;
  display: block;
  width:88rpx;margin:0 auto;
}

.morelottery{
  display:flex;
  justify-content:center;
  align-items:center;
  margin: 40rpx 0 34rpx;
}

.morelottery>view{
  width:120rpx;height:1px;background: #FFF66C;transform: scale(1,0.5);
}

.morelottery>text{
  font-family: SourceHanSansCN-Regular;
  font-size: 28rpx;
  color:#FFF66C;
  margin: 0 20rpx;
}

.lotterysystem{
  width:662rpx;height:570rpx;
  margin:34rpx 0 20rpx 0;
  background-image: url('https://qmzgcdn.boc7.net/welfare/free_game/turntableback.gif');
  background-size: 100% 100%;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
  box-sizing:border-box;
  padding:34rpx 0;
}
.lotterysystem>view{
  width: 186rpx;
  height: 154rpx;
  margin: 6rpx 6rpx;
  background-size:100% 100%;
  box-sizing:border-box;
  border-radius: 18rpx;
  position: relative;
}
