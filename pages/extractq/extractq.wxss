/* pages/extractq/extractq.wxss */
page {
  width: 100%;
  height: auto;
  overflow-y: auto;
  /*滚动条要隐藏么  */
  margin: 0;
  padding: 0;
}

.container {
  width: 100%;
  height: 100%;
  margin: 0;
  position:relative;
}

.balanceshow{
  width: 670rpx;
  height: 260rpx;
  margin: 34rpx auto;
  background-image: url('https://qmzgcdn.boc7.net/welfare/free_game/balanceback.png');
  background-size:100% 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
}

.balanceshow>text:nth-child(1){
  font-family: MicrosoftYaHei;
  font-size: 24rpx;
  color:#ffffff;
}

.balanceshow>text:nth-child(2){
  font-family: MicrosoftYaHei;
  font-size: 66rpx;
  color:#ffffff;
}

.balanceshow>navigator{
  width: 190rpx;
  height:50rpx;
  line-height:48rpx;
  border:1px solid #ffffff;
  border-radius:26rpx;
  background: transparent;
  font-family: MicrosoftYaHei;
  font-size: 22rpx;
  color:#ffffff;
  text-align: center;
  margin-top: 20rpx;
}

.confirmextract,.invitefriend{
  width: 550rpx;
  height:86rpx;
  line-height:86rpx;
  border-radius:44rpx;
  font-family: MicrosoftYaHei;
  font-size: 30rpx;
  margin: 0 auto;
  margin-top:30rpx;
  padding: 0;
}

.confirmextract{
  background-image: url('https://qmzgcdn.boc7.net/welfare/free_game/confirmwithdraw.png');
  background-size:100% 100%;
  color:#FF7936;
  border:0;
}

.confirmextract::after,.invitefriend::after{
  border:0;
}

.invitefriend{
  background-image: url('https://qmzgcdn.boc7.net/welfare/free_game/inviteplaytogether.png');
  background-size:100% 100%;
  color:#FFFFFF;
  display: flex;
  justify-content: center;
  align-items: center;
  border:0;
  margin-bottom:60rpx;
}

.mask {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.75);
  z-index: 999;
}

.bags {
  width: 600rpx;
  height: 340rpx;
  z-index: 1000;
  border-radius: 16rpx;
  position: fixed;
  top:0;
  bottom:0;
  left: 0;right:0;
  margin: auto;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  box-sizing:border-box;
  padding:18rpx 0 40rpx;
  background:#ffffff;
}

.closepos{
  position:absolute;
  width:40rpx;height:40rpx;
  top:30rpx;right:30rpx;
}

.size26_color333{
  font-size:26rpx;
  color:#333333;
}

.size28_color333{
  font-size:28rpx;
  color:#333333;
}

.contact_confirm{
  color:#ffffff;
  font-size:26rpx;
  width: 300rpx;
  height:68rpx;
  border-radius: 34rpx;
  background: #FE4141;
}