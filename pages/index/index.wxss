.thinline{
  width:100%;
  height:1px;
  background: #EBEBEB;
  transform: scale(1,0.5);
  position:absolute;
  bottom:0;
}

.invitefriend{
  width: 610rpx;
  height:90rpx;
  line-height:90rpx;
  border-radius: 46rpx;
  background-image:url('https://qmzgcdn.boc7.net/welfare/free_game/together_invitefriend.png');
  background-size:100% 100%;
  font-family: MicrosoftYaHei;
  font-size: 32rpx;
  color:#ffffff;
  border:0;margin: 50rpx auto 26rpx;
}

.invitefriend::after{
  border:0;
}

.moregame{
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 60rpx;
}

.moregame>view{
  width: 50rpx;
  height:1px;
  background: #D6D6D6;
}

.moregame>text{
  font-family: SourceHanSansCN-Regular;
  font-size: 22rpx;
  color:#808080;margin: 0 14rpx;
}

.moneytolottery{
  position:fixed;
  top:54%;right:12rpx;
  background-image:url('https://qmzgcdn.boc7.net/welfare/free_game/icon_index_lotterymoney.png');
  background-size:100% 100%;
  width:124rpx;
  height:160rpx;
}

.shareindex{
  position:fixed;
  top:80%;left:12rpx;
  background: transparent;
  background-image:url('https://qmzgcdn.boc7.net/welfare/free_game/icon_index_share.png');
  background-size:100% 100%;
  width:136rpx;
  height:140rpx;
  border:0;
  padding:0;
}

.shareindex::after{
  border:0;
}

.mask {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.75);
  display: flex;
  flex-direction: column;
  z-index: 999;
}

.bags {
  width: 600rpx;
  height: 300rpx;
  z-index: 1000;
  background:#ffffff;
  border-radius: 16rpx;
  position: fixed;
  top:0;
  bottom:0;
  left: 0;right:0;
  margin: auto;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  box-sizing:border-box;
  padding:70rpx 0 20rpx;
}
.bags>text{
  color:#333333;
  font-size:26rpx;
}
.bags>button{
  color:#ffffff;
  font-size:26rpx;
  width: 300rpx;
  height:68rpx;
  border-radius: 34rpx;
  background: #FE4141;
}

.closepos{
  position:absolute;
  width:40rpx;height:40rpx;
  top:34rpx;right:34rpx;
}