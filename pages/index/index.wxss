/* pages/more/more.wxss */

page {
  width: 100%;
  height: 100%;
  overflow-y: auto;
}

.container {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  position: relative;
}

.container>image{
  width:100%;
  height:100%;
  position:absolute;
  top:0;bottom:0;left:0;right:0;margin:auto;
  opacity:0.1;z-index:1;
}

.userinfo{
  height:90rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;padding: 0 30rpx;
  margin-top:14rpx;
}

.userinfo>view:nth-child(1){
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.userinfo>view:nth-child(1)>image{
  width:60rpx;
  height:60rpx;
  border-radius: 50%;margin-right: 20rpx;
}

.userinfo>view:nth-child(1)>text{
  font-family: SourceHanSansCN-Medium;
  font-size: 24rpx;
  color:#1A1A1A;
}

.userinfo>view:nth-child(2){
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.userinfo>view:nth-child(2)>view{
  display: flex;
  justify-content: center;
  align-items: center;
}

.userinfo>view:nth-child(2)>view>image{
  width:32rpx;
  height:32rpx;
  margin-left: 40rpx;
}

.userinfo>view:nth-child(2)>view>text{
  font-family: SourceHanSansCN-Medium;
  font-size: 28rpx;
  color:#1A1A1A;
  margin-left: 12rpx;
}

.raiders{
  width:690rpx;margin:0 auto;height:240rpx;border-radius: 20rpx;
}

.raiders image{
  width:690rpx;height:240rpx;border-radius: 20rpx;
}

.gamelist{
  display:flex;
  justify-content:flex-start;
  align-items: flex-start;
  width:696rpx;
  margin:0 auto;
}

.gamelist>view>button,.gamelist>view>navigator{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-right:22rpx;
  margin-left:22rpx;
  border:0;
  background: transparent;
  padding:0;
}

.gamelist>view>button::after{
  border:0;
}

.gamelist>view>button>image,.gamelist>view>navigator>image{
  width: 130rpx;
  height:130rpx;
  border-radius: 16rpx;
}

.gamelist>view>button>text,.gamelist>view>navigator>text{
  font-family:SourceHanSansCN-Regular;font-size:24rpx;
  margin-top:6rpx;
}

.gamelisttitle{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  background: #ffffff;
  padding:24rpx 0 34rpx 30rpx;
}

.gamelisttitle>image{
  width:42rpx;
  height: 42rpx;
}

.gamelisttitle>text{
  font-family:SourceHanSansCN-Medium;
  color:#1A1A1A;
  font-size:32rpx;
  margin-left: 20rpx;
}

