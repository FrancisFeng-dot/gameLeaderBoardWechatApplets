/* pages/usercenter/usercenter.wxss */
page {
  overflow-y: auto;
  background: #F5F5F5;
}

.container {
  overflow-x: hidden;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  position:relative;
}

.userinfo{
  height:240rpx;
  background-image: url('https://qmzgcdn.boc7.net/welfare/free_game/myqcoinback.png');
  background-size:100% 100%;
  box-sizing: border-box;
  padding: 0 34rpx 44rpx;
  display:flex;
  justify-content:space-between;
  align-items:center;
}

.userinfo>view:nth-child(1){
  display:flex;
  justify-content:space-between;
  align-items:center;
}

.userinfo>view>view:nth-child(1){
  width:108rpx;height:108rpx;
  border-radius:50%;
  background: #ffffff;
  display:flex;
  margin-right: 30rpx;
  justify-content:center;
  align-items:center;
}

.userinfo>view>view:nth-child(1)>image{
  width:110rpx;height:110rpx;border-radius:50%;
}

.userinfo>view>view:nth-child(2){
  font-family:MicrosoftYaHei;
  display:flex;
  flex-direction:column;
}

.userinfo>view>view:nth-child(2)>text:nth-child(1){
  color:#ffffff;font-size:36rpx;margin-bottom:10rpx;
}

.userinfo>view>view:nth-child(2)>view:nth-child(2){
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.userinfo>view>view:nth-child(2)>view:nth-child(2)>image{
  width: 30rpx;
  height: 30rpx;
}

.userinfo>view>view:nth-child(2)>view:nth-child(2)>text{
  font-family:SourceHanSansCN-Regular;
  font-size:24rpx;
  color:#FFFFFF;
}

.extractbutton{
  width:100rpx;height:42rpx;
  line-height:42rpx;
  border-radius:22rpx;
  background:#ffffff;
  font-family:SourceHanSansCN-Regular;font-size:22rpx;color:#FF7936;
  text-align: center;
}

.userinfo>navigator{
  width: 90rpx;
  height: 120rpx;
  background-image:url('https://qmzgcdn.boc7.net/welfare/free_game/myself_lotterygif.png');
  background-size:100% 100%;
}

.myrecord>navigator,.myrecord>button,.myrecord>view{
  width:100%;
  height:100rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
  padding-left: 46rpx;
  padding-right: 40rpx;
  background:#ffffff;
  margin-top: 20rpx;
}

.thinline{
  width:100%;
  height:1px;
  background: #EBEBEB;
  transform: scale(1,0.5);
  position:absolute;
  bottom:0;
}

.myrecord>button{
  border-radius: 0;
  border:0;
}
.myrecord>button:after{
  border-radius: 0;
  border:0;
}

.myrecord>navigator>text,.myrecord>button>text,.myrecord>view>text{
  font-family: SourceHanSansCN-Regular;
  font-size:30rpx;
  color:#333333;
}

.myrecord>navigator>image,.myrecord>button>image,.myrecord>view>image{
width:14rpx;
height:28rpx;
}

.gamelist{
  display:flex;
  justify-content:flex-start;
  align-items: center;
  padding:30rpx 0;
  width: 710rpx;
  margin:0 auto;
}

.gamelist>view{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin:0 14rpx;
}

.gamelist>view>view>view,.gamelist>view>navigator>view{
  width: 114rpx;
  height:114rpx;
  border-radius: 20rpx;
  margin-bottom: 18rpx;
  background-size:100% 100%;
  position: relative;
}

.gamelist>view>view>view>view:nth-child(1),.gamelist>view>navigator>view>view:nth-child(1){
  width:100%;
  height:100%;
  opacity: 0.3;
  border-radius: 16rpx;
  background: #000000;
}

.gamelist>view>view>view>view:nth-child(2),.gamelist>view>navigator>view>view:nth-child(2){
  font-size:24rpx;
  color:#ffffff;
  font-family: MicrosoftYaHei;
  position: absolute;
  top: 0;
  bottom:0;
  left:0;
  right:0;
  margin: auto;
  display: flex;
  justify-content:center;
  align-items:center;
}

.gamelist>view>view>text,.gamelist>view>navigator>text{
  font-family:MicrosoftYaHei;
  font-size:24rpx;
  width:120rpx;
  text-align:center;
}

.signinrecord{
  width:100%;height:340rpx;
  display:flex;
  flex-direction:column;
  justify-content:space-around;
  align-items:center;
  background:#ffffff;
  margin: 20rpx 0;
}

.signinrecord>text:nth-child(1){
  margin-top:10rpx;
  font-family: MicrosoftYaHei;
  font-size: 28rpx;
  color:#1A1A1A;
}

.signinrecord>view:nth-child(2){
  width: 100%;
  height:120rpx;
  box-sizing: border-box;
  padding: 0 40rpx;
}

.signinrecord>view:nth-child(2)>view{
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.signinrecord>view:nth-child(2)>view>text{
  font-family: MicrosoftYaHei;
  font-size: 24rpx;
  color:#B3B3B3;
  text-align:center;
  width: 76rpx;
}

.signinrecord>view:nth-child(2)>view:nth-child(2){
  position:relative;
  margin-top:12rpx;
  margin-bottom:6rpx;
}

.signinrecord>view:nth-child(2)>view:nth-child(2)>image{
  width: 48rpx;
  height:48rpx;
  margin: 0 10rpx;
  position:relative;
  z-index:1;
}

.signinrecord>view:nth-child(2)>view:nth-child(2)>view{
  width:648rpx;height:6rpx;
  background:#EBEBEB;
  position:absolute;
  top:0;bottom:0;left:0;right:0;margin:auto;
  z-index:0;
}

.signbutton{
  width: 240rpx;
  height:60rpx;
  line-height:60rpx;
  border-radius:30rpx;
  font-family: MicrosoftYaHei;
  font-size: 26rpx;
  color:#ffffff;
  background-image: url('https://qmzgcdn.boc7.net/welfare/free_game/signgetmoney.png');
  background-size:100% 100%;
  margin: 0 auto;
  padding: 0;
  border: 0;
  margin-bottom:10rpx;
}

.signbutton::after{
  border: 0;
}

.tasklist>view{
  position: relative;display: flex;
  justify-content: flex-start;
  align-items: center;
  box-sizing: border-box;
  padding-left: 140rpx;
  height: 130rpx;
}

.tasklist>view>image{
  width:80rpx;
  height:80rpx;
  position: absolute;
  top:0;
  bottom:0;
  left:28rpx;
  margin: auto;
}

.tasklist>view>view{
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
}

.tryplay{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
}

.tryplay>text{
  font-family: SourceHanSansCN-Regular;
  font-size: 28rpx;
  color:#1A1A1A;
}

.tryplay>view{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  margin-top:10rpx;
}

.tryplay>view>image{
  width:28rpx;
  height:28rpx;
}

.tryplay>view>text{
  font-family: SourceHanSansCN-Regular;
  font-size: 24rpx;
  color:#999999;
  margin-left: 8rpx;
}

.tasklist>view>view>button,.tasklist>view>view>navigator{
  width:160rpx;height:54rpx;line-height: 54rpx;
  border-radius: 28rpx;
  border:0;
  font-family: MicrosoftYaHei;
  font-size: 26rpx;
  color:#ffffff;
  padding: 0;
  margin: 0;background-size:100% 100%;
  margin-right: 30rpx;
}

.tasklist>view>view>button::after{
  border:0;
}

.thinline{
  width:100%;
  height:1px;
  background: #EBEBEB;
  transform: scale(1,0.5);
  position:absolute;
  bottom:0;
}

.mask {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.75);
  display: flex;
  flex-direction: column;
  z-index: 999;
}

.bags {
  width: 600rpx;
  height: 300rpx;
  z-index: 1000;
  background:#ffffff;
  border-radius: 16rpx;
  position: fixed;
  top:0;
  bottom:0;
  left: 0;right:0;
  margin: auto;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  box-sizing:border-box;
  padding:70rpx 0 20rpx;
}
.bags>text{
  color:#333333;
  font-size:26rpx;
}
.bags>button{
  color:#ffffff;
  font-size:26rpx;
  width: 300rpx;
  height:68rpx;
  border-radius: 34rpx;
  background: #FE4141;
}

.closepos{
  position:absolute;
  width:40rpx;height:40rpx;
  top:34rpx;right:34rpx;
}