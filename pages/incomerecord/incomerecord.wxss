/* pages/incomerecord/incomerecord.wxss */
page {
  width: 100%;
  height: auto;
  overflow-y: auto;
  margin: 0;
  padding: 0;
}

.container {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  margin: 0;
  padding: 0;
  background: #f5f5f5;position:relative;
}

.myrecord{
  background:#ffffff;
}
.myrecord>view{
  width:90%;
  height:140rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
  border-bottom: 0.5pt solid #EBEBEB;
  margin:0 auto;
}

.myrecord>view>view:nth-child(1){
  display:flex;
  flex-direction:column;
  align-items:flex-start;
}

.myrecord>view:last-child{
  border-bottom: 0;
}

.myrecord>view>view:nth-child(1)>text:nth-child(1){
font-family: SourceHanSansCN-Regular;
font-size: 32rpx;
color:#1A1A1A;
}
.myrecord>view>view:nth-child(1)>text:nth-child(2){
font-family: MicrosoftYaHei;
color:#999999;
font-size:24rpx;
margin-top:14rpx;
}
.myrecord>view>text:nth-child(2){
font-family: MicrosoftYaHei;
font-size:32rpx;
}